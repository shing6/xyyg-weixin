/**app.wxss**/

/* 封装阴影分隔*/
.divider{
  height: 20rpx;
  background-color: #f1f1f1;
  box-shadow: 0 5rpx 5rpx rgba(0,0,0,.1) inset
}
/* 封装白色背景*/
.bgw{
  background-color: #fff;
}

/* 封装下拉刷新 上拉加载样式*/
.weui-loadmore {
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  margin-top: 30rpx;
}

.weui-loading {
  position:absolute;
   left: 50%;
  margin-left: -25px;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore-tips {
  position:absolute;
  font-size: 14px;
  display: inline-block;
  vertical-align: middle;
  left: 50%;
  margin-left: -28px;
  color: #666;

}

/* 功能封装：箭头 */
.arrow{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.arrow::after{
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-top: 3rpx solid #ccc;
    border-right: 3rpx solid #ccc;
    transform: rotate(45deg);
}
/* 功能封装:微软雅黑 */
.font{
      font-family: Microsoft YaHei;
}

