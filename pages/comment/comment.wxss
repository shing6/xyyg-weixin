.comment-top{
  padding: 20rpx 0 20rpx 20rpx;
  display: flex;
  align-content: center;
  border-bottom: 1rpx solid #e9e9e9;
  background-color: #fff;
}
.title{
  font-size: 15px;
  display: block;
  margin-top: 10rpx;
}
.star-pos {
 margin: 10rpx;
 display: flex;
 flex-direction: row;
}
.stars{
 width: 40rpx;
 height: 40rpx;
 margin-left: 30rpx;
}
.stars-detail{
  font-size: 15px;
  margin-left: 30rpx;
}
.comment-middle{
  background-color: #fff;
  position: relative;
}
.comment-middle .middle-text{
   padding: 20rpx 20rpx 20rpx 20rpx;
   width: 95%;

   font-size: 15px;
   border-bottom: 1rpx solid #e9e9e9;
}
 .count{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: block;
  height: 30rpx;
  width: 50rpx;
  font-size: 29rpx;
  color: #999;
}


.upload-img {
      display: flex;
      padding: 15rpx;
      justify-content: flex-end;
      align-items:center;
      background-color: #fff;
}
.upload-img image {
    height: 150rpx;
    width: 150rpx;
    margin-left: 15rpx;
}
.upload-img  .imgs-style {
    display: flex;
     justify-content: center;
     align-items:center;
     position: relative;
}
.upload-img  .imgs-style:first-child{
     display: flex;
     justify-content: center;
     align-items:center;
     position: relative;
     margin-left: 157rpx;
}
.upload-img .imgs{
  position: absolute;
  left: 0;
  clear: both;
}
.upload-img .imgs .image{
    height: 45rpx;
    width: 45rpx;
}
.upload-img  .imgs-style .close{
    position: absolute;
    top: 0;
    right: 0;
}
.upload-img  .imgs-style .close image{
    height: 45rpx;
    width: 45rpx;
}
.upload-img  text{
    padding-left: 15rpx;
}

.comment-bottom{
   position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    border-top: 3rpx solid #e9e9e9;
    background-color: #fff;
}
.comment-bottom text{
  font-size: 15px;
  padding: 0 10rpx 0 10rpx;
  position: absolute;
  right: 0;
  background-color: #13D1BE;
  color: #fff;
}
