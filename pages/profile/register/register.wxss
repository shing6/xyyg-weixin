page{
 
  background-color: #e9e9e9;
}
.images{
 
  height: 480rpx;
  width: 100%;
}
.images image {
   width: 100%;
   height: 465rpx;
}
.shop{
background-color: #fff;
 margin-bottom: 10rpx;
}

.shop .name{
    width: 720rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #f4f4f4;
    display: flex;
    font-size: 28rpx;
   
    
 
}

.shop .name .label{
     width: 160rpx;
    color: #000
}
.shop .name .label-right{
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
 }
.shop .name .label-right input{
    
    height: 100%;
    font-size: 28rpx;
    padding-right: 30rpx;
}
.addr-images{
   display: block;
   margin-top: 25rpx;
   width: 35rpx;
   height: 35rpx;
}
.upload{
  position: relative;
  margin-left: 30rpx;
}
.uploadImage{
  margin-top: 20rpx;
  width: 180rpx;
  height: 180rpx;
}
.upload .close image{
  left: 160rpx;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
}
.upload .label{
    width: 160rpx;
    color: #000;
    font-size: 28rpx;
    
}
.label-text{
  font-size: 12px;
  color: #ccc;
}
.register{
    background-color: #13D1BE;
    height: 80rpx;
}
.register-btn{
 font-size: 15px;
 display: block;
 width: 100%;
 border-radius: 10rpx;
 text-align: center;
 color: #fff;
 align-items: center;
 line-height: 80rpx;
}
.codeBtn{
   display: inline-block;
   width: 25%;
   height: 70rpx;
   line-height: 70rpx;
   padding: 4rpx 0;
   font-size: 12px;
   vertical-align: middle;
   color: #09bb07;
   background-color: #fff;
   text-align: center;
   border: 2rpx solid;
   margin-top: 5rpx;
}
.no-codeBtn{
   display: inline-block;
   width: 25%;
   height: 70rpx;
   line-height: 70rpx;
   padding: 4rpx 0;
   font-size: 12px;
   vertical-align: middle;
   color: #ccc;
