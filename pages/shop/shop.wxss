page {
  height: 100%;
  overflow: hidden;
}
.container {
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.header {
  width: 100%;
  position: relative;
  color: #000;
}
.header .shop-Info {
  position: relative;
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #13D1BE;
}

.header .shop-Info .logo {
  width: 150rpx;
  height: 150rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  border: 3rpx solid #eee;
}

.header .shop-Info .shop-words {
  display: flex;
  flex-direction: column;
  width: 375rpx;
  line-height: 1.8;
 }

.header .shop-Info .shop-words .welcome-ellipsis {
  
  font-size: 28rpx;
  font-weight: 700;
}
.dy_logo{
    display: block;
    height: 100rpx;
    width: 100rpx;
}






.content-container {
  display: -webkit-flex;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.classify-container {
  width: 180rpx;
  background: #ECECEC;
  height: 100%;
 }

.classify-container .classify {
  padding: 30rpx 0rpx;
  text-align: center;
}

.classify-container .classify.active {
  background: #fff;
  border-left: 4rpx solid #FF5777;
  border-top: 1rpx solid #EFEFEF;
  border-bottom: 1rpx solid #EFEFEF;
}

.classify-container .classify .name {

  display: inline-block;
  font-size: 28rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

.classify-container .classify .name.active {
  color: #FF5777;
  font-weight: bold;
}

.goods-container {
  flex: 1;
  background: #fff;
  min-height: 100%;
  
}

.goods-container .title {
  text-align: left;
  padding: 20rpx 30rpx;
  color: grey;
  font-size: 22rpx;
  line-height: 30rpx;
  background: rgba(105, 195, 170, 0.3);
}

.goods-container .goods {
  position: relative;
  height: 130rpx;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
}

.goods-container .goods .pic {
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
}



.goods-container .goods .shop_name {
  width: 300rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
  color: #000;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 46rpx;
}

.goods-container .goods .soldInfo {
  display: flex;
  flex-direction: column;
  color: #989898;
  font-size: 22rpx;
  line-height: 46rpx;
  width: 350rpx;
  align-items: flex-start;
}



.goods-container .goods .price  .good_price {
  color: #ff4422;
  margin-top: 10rpx;
  width: 120rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
  
}

.goods-container .goods .price .old_price{
  padding: 15rpx;
  text-decoration:line-through;
}

.goods-container .goods .sold {
  height:30rpx;
  line-height:30rpx;
  padding:0 10rpx;
  font-size:20rpx;
  border-radius:4rpx;
  border:1px solid #ff5777;
  color:#ff5777;

}
